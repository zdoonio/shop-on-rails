<h1>Kategorie</h1>

<%= link_to new_admin_category_path, class: "btn btn-success" do %>
  <%= fa_icon "fa-plus" %> Dodaj nową kategorię
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Nazwa</th>
    <th>Akcja</th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td>
        <%= link_to "Edycja", edit_admin_category_path(category), class: "btn btn-primary btn-xs" %>
        <%= link_to "Usuń", category, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
